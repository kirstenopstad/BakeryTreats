@{
  Layout = "_Layout";
}
@using Bakery.Models

<h1>Flavors</h1>
<!-- List all flavors -->
@if (Model.Count != 0)
{
  foreach (Flavor flav in Model)
  {
    <!-- Link to Details -->
    <li>@Html.ActionLink($"{flav.Type}", "Details", new {id = flav.FlavorId})</li>
  }
}

<!-- Link to Create new flavor -->
<p>@Html.ActionLink("Create", "Create")</p>

