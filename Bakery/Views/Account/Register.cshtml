@{
  Layout = "_Layout";
}

@using Bakery.ViewModels

@model RegisterViewModel

<h1>Register</h1>

@if(!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please fix the following error(s) and resubmit form.")
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="mb-3">
    <label for="emailInput" class="form-label">
      @Html.LabelFor(user => user.Email)
    </label>
    @Html.TextBoxFor(user=> user.Email, null , new {@class = "form-control", @placeholder="name@example.com", @id="emailInput"})
  </div>
  <div class="mb-3">
    <label for="passwordInput" class="form-label">
      @Html.LabelFor(user=> user.Password)
    </label>
    @Html.EditorFor(user=> user.Password, new { htmlAttributes = 
        new {@class  = "form-control", @id="passwordInput" }, })
  </div>
  <div class="mb-3">
    <label for="passwordInputConfirm" class="form-label">
      @Html.LabelFor(user=> user.ConfirmPassword)
    </label>
    @Html.EditorFor(user=> user.ConfirmPassword, new { htmlAttributes = 
        new {@class  = "form-control", @id="passwordInputConfirm" }, })
  </div>
  <input type ="submit" value="Register"/>
}